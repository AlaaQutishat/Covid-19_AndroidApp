<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@mipmap/homepage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="119dp"
        android:layout_marginBottom="118dp"
        android:gravity="center"
        android:text="COVID-19 STATIC CASES"
        android:textColor="@color/color_white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/gotoglobale"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <Button
        android:id="@+id/gotoglobale"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="38dp"
        android:background="@drawable/buttonradius"
        android:gravity="center"
        android:text="Global stats"
        android:textColor="#FA5252"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/gotolocal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"></Button>

    <Button
        android:id="@+id/gotolocal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/buttonradius"
        android:gravity="center"
        android:text="Local stats"
        android:textColor="#FA5252"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/moreinformation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gotoglobale"></Button>

    <Button
        android:id="@+id/moreinformation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/buttonradius"
        android:gravity="center"
        android:text="For More Information"
        android:textColor="#FA5252"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/gotoaman"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gotolocal"></Button>

    <Button
        android:id="@+id/gotoaman"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="29dp"

        android:layout_marginEnd="29dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/buttonradius"
        android:gravity="center"
        android:text="Install Aman App"
        android:textColor="#FA5252"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moreinformation"></Button>

</androidx.constraintlayout.widget.ConstraintLayout>